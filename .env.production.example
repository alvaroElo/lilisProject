# Configuración de Producción - AWS
# Copiar a .env en el servidor EC2

# Django
DJANGO_DEBUG=False
DJANGO_SECRET_KEY=tu-secret-key-super-segura-aqui
DJANGO_ALLOWED_HOSTS=tu-dominio.com,www.tu-dominio.com,ip-de-ec2

# Base de datos (RDS MySQL)
DB_NAME=dulceria_lilis_prod
DB_USER=admin
DB_PASSWORD=tu-password-seguro
DB_HOST=tu-rds-endpoint.rds.amazonaws.com
DB_PORT=3306

# Amazon S3 para archivos media
USE_S3=True
AWS_ACCESS_KEY_ID=tu-access-key-id
AWS_SECRET_ACCESS_KEY=tu-secret-access-key
AWS_STORAGE_BUCKET_NAME=dulceria-lilis-media
AWS_S3_REGION_NAME=us-east-1

# Email (Resend)
RESEND_API_KEY=re_tu_api_key
RESEND_FROM_EMAIL=noreply@tu-dominio.com
# RESEND_TEST_EMAIL=  # Comentar en producción

# Nombre de la empresa
COMPANY_NAME=Dulcería Lilis
